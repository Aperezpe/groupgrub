

<!--
//
//
//
    Event Info -->
<div class="container">
  <br><br>

    <h1><%=@dinner.id%> - <%=@dinner.title%></h1>
    <h3><%=@dinner.event_date.strftime("%B %d, %Y")%></h3>
  <%rest_name = "undecided" %>
  <% if @dinner.restaurant_id %>
    <% name = Restaurant.first(id: @dinner.restaurant_id)%>
    <%if name%>
    <% rest_name = name.rest_name %>
    <%end%>
    <h3>Restaurant: <%=rest_name %></h3>
  <%end %>








  <!--
//
//
//
    Cancel Event -->
  <% if current_user.id == @dinner.user_id %>
  <form action="/events/delete" method="POST">
    <input type="hidden" name="id" value ="<%=@dinner.id%>"/>
    <br><input type="submit" value="Delete Event" class="btn btn-primary"/>
  </form>
  <br>
    <%end%>
</div>




  <!--
//
//
//
    Invite Friend -->
    <div class="container">

    <% if current_user.id == @dinner.user_id %>
        <form action= "/events/<%=@dinner.id%>/newFriend" method= "POST">
            <br>
            <label for="email">Invite a new friend to <%=@dinner.title%>:</label>
            <input type="email" name="email"
                pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" placeholder="E-mail" required>

            <input type= "submit" value="Submit" class="btn btn-primary"/>
        </form>
        <%else %>
        <form action= "/events/<%=@dinner.id%>/cancel" method= "POST">
        <input type= "submit" value="Cancel Invite" class="btn btn-primary"/>
        </form>

    <%end%>

    <%if @email%>
        <p><%=@user.email%> has been invited!</p>
    <%end%>
    </div>





  <!--
//
//
//
    Remove Friend -->
  <div class="container">

    <% if current_user.id == @dinner.user_id %>
      <form action= "/events/<%=@dinner.id%>/deleteFriend" method="POST">
       <br><label for="friendID">Delete a friend from <%=@dinner.title%>:</label>
        <input type="text" name="friendID" placeholder="ID" required>
        <input type= "submit" value="Submit" class="btn btn-primary"/>
      </form>
    <%end%>
  </div>





<!--
