<div class="container">
  <br><br>

    <h1><%=@dinner.id%> - <%=@dinner.title%></h1>
    <h3><%=@dinner.event_date%></h3>
    <br>

    <div class="container">

    <% if current_user.id == @dinner.user_id %>
        <form action= "/events/<%=@dinner.id%>/newFriend" method= "POST">
            <br>
            <label for="email">Invite a new friend to <%=@dinner.title%>:</label>
            <input type="email" name="email"
                pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" placeholder="E-mail" required>

            <input type= "submit" value="Submit"/>
        </form>
    <%end%>

    <%if @email%>
        <p><%=@user.email%> has been invited!</p>
    <%end%>
    </div>



  <div class="container">

    <% if current_user.id == @dinner.user_id %>
      <form action= "/events/<%=@dinner.id%>/deleteFriend" method="POST">
        <label for="friendID">Delete a friend from <%=@dinner.title%>:</label>
        <input type="text" name="friendID" placeholder="ID" required>
        <input type= "submit" value="Submit"/>
      </form>
    <%end%>
  </div><br>
</div>

<div class="container">
  <h1>Friends that are attending:</h1><br>
  <%u= User.first(id: @dinner.user_id) %>


  <ul>
    <li>ID:<%=u.id %>, Name: <%=u.name %>, Email: <%=u.email %></li>
    <%Group.all(event_id: @dinner.id).each do |g|%>
      <%if g.friend_id!=-1%>
        <%u = User.first(id: g.friend_id)%>
        <li> ID: <%=u.id%>, Name: <%=u.name%>, Email: <%=u.email%> </li>
      <%end%>
    <%end%>



  </ul>
</div>






  <div class="container">
    <% if current_user.id == @dinner.user_id %>
    <h1>Friends to choose from</h1><br>

    <% Friends.all(user_id: current_user.id, are_friends: true).each do |u|%>
      <% string =""%>



        <%s = User.get(u.following_user_id)%>
        <%string +="#{u.id} - #{s.name} - #{s.email}"%>
        <p><%=string%></p>

      <%end%>
    <%end%>



  </div>





